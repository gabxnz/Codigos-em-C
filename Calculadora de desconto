#include <stdio.h>
#include <stdlib.h>
int main()
{
float preco_produto, produto_com_desconto, desconto;
printf ("Digite o valor do produto \n");
scanf("%f", &preco_produto);
printf ("Digite o valor do desconto \n");
scanf("%f", &desconto);
produto_com_desconto = (preco_produto-(preco_produto * desconto / 100));
printf("Produto com desconto: %.2f", produto_com_desconto);
}
