#include <stdio.h>
#include <stdlib.h>

int main()
{
    int contador;
    contador = 0;
    printf("Crescente \n \n");
    for (contador = 0; contador <= 9; contador ++)
    {
        printf("%d \n", contador);
    }
    printf(" \n Decrescente \n \n");
    for (contador = 9; contador >= 0; contador --)
    {
        printf("%d \n", contador);
    }
    printf("\n Crescente while \n \n");
    int i = 0;
    while (i <=9)
    {
        printf("%d \n", i);
        i++;
    }
    i =9;
    printf("\n Decrescente while \n \n");
    while (i >=0)
    {
        printf("%d \n", i);
        i--;
    }


    return 0;
}
